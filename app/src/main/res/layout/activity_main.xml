<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/start_new_game_button"
        android:layout_width="183dp"
        android:layout_height="63dp"
        android:layout_marginStart="114dp"
        android:layout_marginTop="334dp"
        android:layout_marginEnd="114dp"
        android:layout_marginBottom="334dp"
        android:onClick="start_new_game"
        android:text="@string/start_game"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/checkBox_v1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="156dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="159dp"
        android:layout_marginBottom="29dp"
        android:gravity="center"
        android:text="Стандартная версия"
        app:layout_constraintBottom_toTopOf="@+id/checkBox_v2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/start_new_game_button" />

    <CheckBox
        android:id="@+id/checkBox_v2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="159dp"
        android:gravity="center"
        android:text="Вторая версия"
        app:layout_constraintEnd_toEndOf="@+id/checkBox_v1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/checkBox_v1"
        app:layout_constraintTop_toBottomOf="@+id/checkBox_v1" />

    <CheckBox
        android:id="@+id/checkBox_time_machine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="159dp"
        android:layout_marginBottom="129dp"
        android:gravity="center"
        android:text="Машина времени"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/checkBox_v2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/checkBox_v2"
        app:layout_constraintTop_toBottomOf="@+id/checkBox_v2"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>